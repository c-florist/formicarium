{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "types": ["svelte"],
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "allowArbitraryExtensions": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.svelte",
    ".svelte-kit/ambient.d.ts",
    ".svelte-kit/types/**/$types.d.ts"
  ],
  "references": [{ "path": "../domain" }]
}
